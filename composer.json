{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0",
        "hyperf/async-queue": "^2.2",
        "hyperf/cache": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/database": "~2.2.0",
        "hyperf/database-pgsql-incubator": "^0.1.2",
        "hyperf/db-connection": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/http-server": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/memory": "~2.2.0",
        "hyperf/paginator": "^2.2",
        "hyperf/process": "~2.2.0",
        "hyperf/redis": "^2.2",
        "hyperf/resource": "^2.2",
        "hyperf/swagger": "^2.2",
        "hyperf/tracer": "~2.2.0",
        "hyperf/validation": "^2.2",
        "hyperf/view": "^2.2",
        "hyperf/view-engine": "^2.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "~2.2.0",
        "hyperf/ide-helper": "^2.2",
        "hyperf/testing": "~2.2.0",
        "hyperf/watcher": "^2.2",
        "pcov/clobber": "^2.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^4.5",
        "symfony/var-dumper": "^6.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always --testdox",
        "cs-fix": "php-cs-fixer fix app",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php ./bin/hyperf.php start"
        ],
        "swagger": "php bin/hyperf.php swagger:gen -o public/"
    }
}
